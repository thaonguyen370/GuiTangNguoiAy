<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:weightSum="10"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/manHinhDialog"
    android:layout_height="match_parent">
    <TextView
        android:background="@color/xanh_la_troi_dam"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/trang"
        android:text="Nhap thong tin ma ban muon sua...."
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="8"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="HoTen"
                android:textColor="@color/mau_do"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:text="Ngay sinh"
                android:textColor="@color/mau_do"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:text="user"
                android:textColor="@color/mau_do"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:text="nhap Pass"
                android:textColor="@color/mau_do"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:text="Nhap lai pass"
                android:textColor="@color/mau_do"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:text="so DT"
                android:textColor="@color/mau_do"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:text="Email"
                android:textColor="@color/mau_do"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <EditText
                android:id="@+id/hoTen"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="nhap ho ten" />

            <EditText
                android:id="@+id/ngaySinh"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:hint="nhap ngay sinh" />

            <EditText
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:hint="nhap user" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:hint="Nhap password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/laiPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:hint="nhap lai password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/soDT"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:hint="So DT"
                android:inputType="phone" />

            <EditText
                android:id="@+id/Email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:hint="nhap Email"
                android:inputType="textEmailAddress" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:id="@+id/dongY"
            android:layout_weight="1"
            android:text="Dong y"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/huy"
            android:layout_weight="1"
            android:text="Huy"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>
</LinearLayout>